{
  "variables": 
  {
    "aws_access_key": "",
    "aws_secret_key": "",
    "version":""
  },
  "provisioners": 
  [
    {
      "type": "ansible",
      "playbook_file": "./playbook.yml",
      "extra_arguments": ["--extra-vars", "env={{user `name`}}"]
    }
  ],
  "builders": 
  [
    {
      "type": "amazon-ebs",
      "access_key": "{{user `aws_access_key`}}",
      "secret_key": "{{user `aws_secret_key`}}",
      "region": "us-east-1",
      "source_ami": "ami-05a36d3b9aa4a17ac",
      "instance_type": "t2.micro",
      "ssh_username": "ubuntu",
      "ami_name": "{{user `name`}}_{{user `version`}}"
    }
  ]
}
